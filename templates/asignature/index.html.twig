{% extends 'base.html.twig' %}

{% block title %}Asignature index{% endblock %}

{% block body %}
    <h1>Asignatures by Career</h1>

    {% for career in careers %}
        <h2>{{ career.name }}</h2>
        <ul>
            {% for asignature in asignatures %}
                {% if asignature.career == career %}
                    <li>{{ asignature.name }}</li>
                {% endif %}
            {% endfor %}
        </ul>
    {% endfor %}
    
    <a href="{{ path('app_asignature_new') }}">Create new</a>
    <a href="{{ path('app_home') }}">back to list</a>
{% endblock %}


