{% extends 'base.html.twig' %}

{% block title %}Career index{% endblock %}

{% block body %}
    <h1>Career index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for career in careers %}
            <tr>
                <td>{{ career.id }}</td>
                <td>{{ career.name }}</td>
                <td>
                    <a href="{{ path('app_career_show', {'id': career.id}) }}">show</a>
                    <a href="{{ path('app_career_edit', {'id': career.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_career_new') }}">Create new</a>
{% endblock %}
